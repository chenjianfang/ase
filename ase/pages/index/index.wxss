.head-create{
	float: left;
	color: #000;
	font-size: 28rpx;
	height: 52.5rpx;
	line-height: 52.5rpx;
}
.attention{
	margin-top: 20rpx;
	padding: 0 20rpx;
}
.attention-title{
	font-size: 24rpx;
	text-align: left;
	margin-bottom: 10rpx;
}
.user-attention-list{
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	align-items: center;
	font-size: 24rpx;
}
.attention-list-detail{
	width: 216rpx;
	height: 100rpx;
	text-align: left;
	line-height: 100rpx;
	margin-bottom: 30rpx;
	border: 1px solid;
	box-sizing: border-box;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.cm-square{
	position: relative;
	padding-left: 10rpx;
}
.cm-attention{
	position: absolute;
	top: 4rpx;
	right: 4rpx;
	width: 80rpx;
	height: 45rpx;
	line-height: 45rpx;
	text-align: center;
	font-size: 24rpx;
	color: #fff;
	border-radius: 4rpx;
	background-color: #49be38;
}
.cm-attention:active{
	background-color: #fff;
	color: #49be38;
}
.my-attention{
	text-align: center;
	border-color: #49be38;
}












