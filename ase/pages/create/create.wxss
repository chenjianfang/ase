page{
	height: 100%;
	background-color: #fff;
}
.create-community{
	height: 100%;
}
.container{
	margin: 0 60rpx;
	height: 100%;
	font-size: 28rpx;
	font-weight: 600;
	color: #000;
}
.create-item{
	border: 2rpx solid #ddd;
	box-sizing: border-box;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 40rpx;
}
.create-tips{
	display: block;
	flex: 11;
	color: #666;
	padding-left: 20rpx;
	box-sizing: border-box;
}
.create-input{
	display: block;
	flex: 40;
	height: 100rpx;
	border: 0;
	outline: 0;
	box-sizing: border-box;
	padding-left: 20rpx;
}
.create-title{
	display: block;
	text-align: center;
	margin-bottom: 40rpx;
	margin-top: 40rpx;
}
.create-submit{
	display: block;
	height: 100rpx;
	text-align:center;
	line-height: 100rpx;
	color: #fff;
	background-color: #e22;
}











